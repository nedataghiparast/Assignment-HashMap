<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" hgap="10" vgap="10">

    <Button text="Submit" defaultButton="true" GridPane.columnSpan="2" GridPane.rowIndex="6" textFill="blue" GridPane.columnIndex="2"
    GridPane.halignment="CENTER" fx:id="SubmitButton" onAction="#onSubmit">

    </Button>
    <padding>

        <Insets top="20" left="20"/>
    </padding>

    <Label text="Principal dollar amount" GridPane.rowIndex="2" GridPane.columnIndex="1">

        <font>
            <Font name="Arial" size="10"/>
        </font>
    </Label>
    <TextField GridPane.rowIndex="2" GridPane.columnIndex="2" fx:id="PrincipaldollaramountField"/>
    <Label text="Interest rate" GridPane.rowIndex="3" GridPane.columnIndex="1">
        <font>
            <Font name="Arial" size="10"/>
        </font>

    </Label>
    <TextField GridPane.rowIndex="3" GridPane.columnIndex="2" fx:id="InterestrateField"/>

    <Label text="Number of years" GridPane.rowIndex="4" GridPane.columnIndex="1">
        <font>
            <Font name="Arial" size="10"/>
        </font>

    </Label>
    <TextField GridPane.rowIndex="4" GridPane.columnIndex="2" fx:id="NumberofyearsField"/>
</GridPane>